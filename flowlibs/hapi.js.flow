type Method = 'get' | 'post' | 'put' | 'delete'
type Request = {}
type Reply = {}
type Handler = any
type Route = {
  path: string,
  method: Method | Array<Method>,
  config?: {
    auth?: boolean | {
      strategies?: Array<string>,
      mode: 'try'
    },
    plugins?: { [plugin: string]: {}},
    handler: Handler
  }
}

declare module 'hapi' {
  declare class Server {
    constructor(config?: {
      debug?: {
        request?: Array<string>,
        server?: Array<string>
      }
    }): void;
    auth: any;
    route: (route: Route) => mixed;
    connection: any;
    state: any;
    register: any;
    views: any;
    start: any;
    log(tags: Array<string>, message: any, timestamp?: Date): void;
  }
}
